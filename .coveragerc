[run]
branch = True
source = biometrics, users, worktime, payroll, integrations
omit = 
    */migrations/*
    */management/commands/*
    */tests/*
    */__init__.py
    */admin.py
    */apps.py
    */urls.py
    */settings.py
    */settings_*.py
    */debug_*.py
    */health.py
    */fix_imports.py
    */celery.py
    config.py
    config-*.py
    */venv/*
    */.venv/*
    */env/*
    */.env/*
    manage.py
    myhours/wsgi.py
    myhours/asgi.py
    */test_*.py
    */*test*.py
    */node_modules/*
    */staticfiles/*
    */media/*
    */logs/*
    */archive/*
    */backups/*
    */scripts/*
    */docs/*
    */__pycache__/*
    .pytest_cache/*
    htmlcov/*

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

    # Don't complain about abstract methods, they aren't run:
    @(abc\.)?abstractmethod

ignore_errors = True

[html]
directory = htmlcov

[xml]
output = coverage.xml