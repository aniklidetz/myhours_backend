# Redis High Availability Configuration
# Copy to .env and adjust as needed

# Enable Redis Sentinel mode
USE_REDIS_SENTINEL=true

# Redis Sentinel Configuration
REDIS_SENTINEL_HOSTS=redis-sentinel-1:26379,redis-sentinel-2:26379,redis-sentinel-3:26379
REDIS_SENTINEL_SERVICE=myhours-master

# Redis Authentication
REDIS_PASSWORD=your-secure-redis-password-here

# Redis Database
REDIS_DB=0

# Fallback for single Redis instance (when USE_REDIS_SENTINEL=false)
REDIS_URL=redis://localhost:6379/0

# Cache Configuration
USE_LOCMEM_CACHE=false

# Additional Settings for Testing
BIOMETRY_TEST_MODE=false
ENABLE_BIOMETRIC_MOCK=false